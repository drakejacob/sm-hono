{
  "type": "module",
  "scripts": {
    "dev": "bun run uno-transform && concurrently \"bun run --hot app/index.tsx\" \"bun run uno\"",
    "uno-transform": "mkdir -p static/css/gen && cd static/css/gen && cp ../*.css ./ && unocss \"./*.css\" --write-transformed",
    "uno": "cd static/css/gen && unocss \"../../../app/**/*.tsx\" --watch",
    "db": "mkdir -p sqlite && npx drizzle-kit push:sqlite"
  },
  "dependencies": {
    "@hono/zod-validator": "^0.2.1",
    "@iconify-json/heroicons": "^1.1.20",
    "drizzle-orm": "^0.30.4",
    "hono": "^4.1.3",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@libsql/client": "^0.5.6",
    "@types/bun": "latest",
    "concurrently": "^8.2.2",
    "drizzle-kit": "^0.20.14",
    "prettier": "^3.2.5",
    "prettier-plugin-tailwindcss": "^0.5.12",
    "unocss": "^0.58.6"
  }
}
